// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Order {
  id            Int    @id @default(autoincrement())
  description   String
  imageInactive String
}

model Broth {
  id            Int    @id @default(autoincrement())
  imageInactive String
  imageActive   String
  name          String
  description   String
  price         Float
}

model Protein {
  id            Int    @id @default(autoincrement())
  imageInactive String
  imageActive   String
  name          String
  description   String
  price         Float
}
